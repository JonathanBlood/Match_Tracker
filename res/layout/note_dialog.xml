<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="match_parent"
	 android:minWidth="250dp"
	android:orientation="vertical"
	android:background="#eee9e9">
	
	<!-- Note -->
	<TextView android:layout_height="wrap_content" android:text="@string/note"
		android:layout_width="match_parent" android:id="@+id/noteTV" />
	<EditText 
		android:layout_height="wrap_content" android:layout_width="match_parent"
		android:textColor="@color/black" android:hint="@string/mandatory"
		 android:singleLine="false" android:lines="3"
		android:text="@string/Empty" android:id="@+id/noteET" />

	<LinearLayout android:layout_width="match_parent"
		android:layout_height="match_parent">

		<!-- Create match button -->
		<ImageButton android:layout_height="wrap_content"
			android:layout_width="match_parent" android:id="@+id/createNoteBN"
			android:layout_weight="1" android:background="@drawable/button_state"
			android:src="@drawable/submit" android:layout_gravity="center_horizontal"/>
			
			<!-- Hide Dialog button -->
		<ImageButton android:layout_height="wrap_content"
			android:layout_width="match_parent" android:id="@+id/hideNoteBN"
			android:layout_weight="1" android:background="@drawable/button_state"
			android:src="@drawable/cancel" android:layout_gravity="center_horizontal"/>

	</LinearLayout>

</LinearLayout>